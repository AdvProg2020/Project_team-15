<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="400.0" style="-fx-background-color: #eeeeee;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ViewController.SortController">
    <children>
        <Label alignment="CENTER" layoutY="24.0" prefHeight="27.0" prefWidth="400.0" text="Sorting:">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label layoutX="88.0" layoutY="93.0" text="Sort By:">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <TextField fx:id="sortField" layoutX="175.0" layoutY="93.0" prefHeight="30.0" prefWidth="155.0" />
        <Button layoutX="40.0" layoutY="139.0" mnemonicParsing="false" onAction="#sort" prefHeight="47.0" prefWidth="319.0" text="Sort">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
        <Button layoutX="40.0" layoutY="265.0" mnemonicParsing="false" onAction="#showAvailableSorts" prefHeight="47.0" prefWidth="155.0" text="Show Available Sorts" wrapText="true">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <Button layoutX="204.0" layoutY="265.0" mnemonicParsing="false" onAction="#currentSort" prefHeight="47.0" prefWidth="155.0" text="Current Sort">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
        <Button layoutX="40.0" layoutY="202.0" mnemonicParsing="false" onAction="#disableSort" prefHeight="47.0" prefWidth="319.0" text="Disable Sort">
            <font>
                <Font size="18.0" />
            </font>
        </Button>
      <CheckBox fx:id="isAscending" layoutX="309.0" layoutY="63.0" mnemonicParsing="false" text="Ascending" />
      <TextField fx:id="textField" editable="false" layoutX="110.0" layoutY="336.0" prefHeight="47.0" prefWidth="181.0" />
    </children>
</AnchorPane>
